datasource db {
  provider = "postgres"
  url      = env("DB_CONNECTION_URL")
}

generator client {
  provider = "prisma-client-js"
}

///1 - 1
// can create a User without connecting or creating a Profile(optional)

model User {
  id        String      @default(uuid())                                  @db.Uuid      @id
  profile   Profile?    @relation(fields: [profileId], references: [id])  // references `id` of `Profile`
  profileId String?     @db.Uuid                                          @unique
}

model Profile {
  id      String       @default(uuid())                                 @db.Uuid      @id
  user User?
}